generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  habits Habit[]

  @@map("users")
}

model Habit {
  id           String         @id @default(uuid())
  name         String
  Streak       Int
  userId       String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  User         User           @relation(fields: [userId], references: [id])
  DayHabit     DayHabit[]
  HabitWeekDay HabitWeekDay[]

  @@map("habits")
}

model Day {
  id       String     @id @default(uuid())
  date     DateTime
  DayHabit DayHabit[]

  @@unique([date])
  @@map("days")
}

model DayHabit {
  id        String   @id @default(uuid())
  habitId   String
  dayId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Habit Habit @relation(fields: [habitId], references: [id])
  Day   Day   @relation(fields: [dayId], references: [id])

  @@unique([habitId, dayId])
  @@map("day_habits")
}

model HabitWeekDay {
  id        String   @id @default(uuid())
  habitId   String
  weekDay   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Habit Habit @relation(fields: [habitId], references: [id])

  @@unique([habitId, weekDay])
  @@map("habit_week_days")
}
